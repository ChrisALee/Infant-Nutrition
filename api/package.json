{
    "name": "infant-nutrition",
    "version": "1.0.0",
    "author": "Christopher Lee",
    "private": true,
    "scripts": {
        "dev": "nodemon",
        "prestart": "tsc -p tsconfig.production.json",
        "start": "node dist/server.js",
        "prestart:prod": "tsc -p tsconfig.production.json",
        "start:prod": "set NODE_ENV=production&& node dist/server.js",
        "pretest": "tsc",
        "test":
            "jest --forceExit --coverage --verbose --env=./dist/utils/test-environment.js",
        "tslint-check": "tslint-config-prettier-check ./tslint.json",
        "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
        "prettier": "prettier  --write **/*.ts*",
        "format": "npm run prettier && npm run tslint",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.{ts,tsx}": ["tslint --fix", "prettier --write", "git add"]
    },
    "dependencies": {
        "@types/bcrypt": "^1.0.0",

        "@types/jest": "^22.2.2",
        "jest": "^22.4.3",
        "lint-staged": "^7.0.1",
        "nodemon": "^1.17.2",
        "prettier": "^1.11.1",
        "ts-jest": "^22.4.2",
        "ts-node": "^5.0.1",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.10.0",
        "tslint-eslint-rules": "^5.1.0"
    }

        "@types/joi": "^13.0.7",
        "@types/jsonwebtoken": "^7.2.6",
        "@types/knex": "^0.14.9",
        "@types/nanoid": "^1.0.0",
        "@types/node": "^9.6.1",
        "@types/pg": "^7.4.5",
        "bcrypt": "^1.0.3",
        "blipp": "^3.0.0",
        "boom": "^7.2.0",
        "disinfect": "^1.0.0",
        "dotenv": "^5.0.1",
        "glue": "^5.0.0",
        "good": "^8.1.1",

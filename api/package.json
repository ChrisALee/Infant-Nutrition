        "good-squeeze": "^5.0.2",
        "hapi": "^17.2.3",
        "hapi-auth-jwt2": "^8.0.1",
        "hapi-dev-errors": "^2.1.0",
        "hapi-swagger": "^9.1.1",
        "inert": "^5.1.0",
        "ioredis": "^3.2.2",
        "ioredis-mock": "^3.6.4",
        "joi": "^13.1.2",
        "jsonwebtoken": "^8.2.0",
        "knex": "^0.14.4",

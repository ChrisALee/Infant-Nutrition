{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types"],
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "lib": ["dom", "es2015", "es2016"],
        "outDir": ".next/"
    },
    "exclude": ["node_modules", "out", ".next"]
}
